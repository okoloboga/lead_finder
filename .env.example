# CometAPI
COMET_API_KEY=
COMET_API_BASE_URL=https://api.cometapi.com/v1
COMET_API_MODEL=gpt-4o
COMET_API_POST_MODEL=gpt-4o

# Google Custom Search API
GOOGLE_API_KEY=
GOOGLE_CSE_ID=f5cb2cbce7f7744df

# Telegram API (получить на my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# Настройки парсинга
POSTS_TO_FETCH=50
MAX_CHANNELS_PER_SEARCH=20
SEARCH_QUERIES_COUNT=5

# Настройки квалификации
MESSAGE_MAX_AGE_DAYS=10  # Учитывать только сообщения за последние N дней
MESSAGES_LIMIT=500  # Количество последних сообщений для парсинга из каждого чата
# Примечание: min_score настраивается отдельно для каждой программы в боте

# Настройки безопасности парсинга
# Режимы: fast, normal, careful (влияет на задержки между запросами)
SAFETY_MODE=normal
MAX_CHATS_PER_RUN=5
MAX_PARTICIPANTS_PER_CHAT=500
MAX_CHANNELS_PER_RUN=50
MAX_SESSION_DURATION_MINUTES=40

# Telegram Bot (опционально, для бот-интерфейса)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Admins (comma-separated Telegram user IDs)
ADMIN_TELEGRAM_IDS=

# PostgreSQL settings
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
